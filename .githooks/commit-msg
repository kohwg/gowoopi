#!/bin/sh
# Conventional Commits validation hook
# Format: <type>(<scope>): <subject>

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Conventional commit pattern
pattern="^(feat|fix|docs|style|refactor|perf|test|ci|chore|build|revert)(\(.+\))?: .{1,100}$"

if ! echo "$commit_msg" | head -1 | grep -qE "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Expected: <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, ci, chore, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(api): add user authentication"
  echo "  fix: resolve memory leak issue"
  echo "  docs(readme): update installation guide"
  exit 1
fi
